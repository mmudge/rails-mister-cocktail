<h1>Here is your Cocktail</h1>

<%= @cocktail.name %>
<div>
<% @cocktail.doses.each do |dose| %>
  <div><%= dose.description %> -- <%= dose.ingredient.name %><%= link_to "", dose_path(dose),
          method: :delete,
          data: { confirm: "Are you sure?" }, class: "far fa-trash-alt" %></div>

<% end %>
</div>

<%= link_to "Add Dose/Ingredients", new_cocktail_dose_path(@cocktail)  %>
<%= link_to "Edit", edit_cocktail_path(@cocktail) %>
<%= link_to "Back", cocktails_path %>

